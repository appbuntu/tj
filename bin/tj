#!/usr/bin/env ruby
# encoding: UTF-8

begin
    require_relative "../lib/theme-juice"
rescue LoadError => err
    warn err
    exit 1
end

Signal.trap "INT" do
    ::ThemeJuice::Interaction.speak "Bye bye!", {
        color: :yellow,
        icon: :general,
        newline: true
    }

    exit 130
end

::ThemeJuice::CLI.start
